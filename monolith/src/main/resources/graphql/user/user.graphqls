type User {
    id: ID!
    username: String!
    email: String!
    country: Country!
}

type Country {
    id: ID!
    name: String!
}

input UserRequestDTO{
    id: ID
    username: String!
    password: String!
    email: String!
}

input UserLoginDTO{
    username:String!
    password:String!
}

extend type Query {
    getUsers: [User]
    getUser(id: ID): User
    getUserByUsername(username: String!): User
    checkUserLogin(user: UserLoginDTO!): Boolean
}

extend type Mutation{
    insertUser(input: UserRequestDTO): User
    updateUser(input: UserRequestDTO): User
}